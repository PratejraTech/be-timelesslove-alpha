# Test Environment
# Used by pytest and test scripts

ENVIRONMENT=test
DEBUG=false
API_VERSION=v1

# Test Supabase (can use same as dev or separate test project)
SUPABASE_URL=https://test-project.supabase.co
SUPABASE_ANON_KEY=test-anon-key
SUPABASE_SERVICE_ROLE_KEY=test-service-role-key
SUPABASE_JWT_SECRET=test-jwt-secret

SUPABASE_DB_URL=
SUPABASE_DB_PASSWORD=

# Test JWT (can be fixed for consistent tests)
JWT_SECRET_KEY=test_jwt_secret_key_minimum_32_bytes_long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

CORS_ORIGINS=http://localhost:5173

# Test media settings
MEDIA_MAX_FILE_SIZE_MB=5
MEDIA_MAX_MEMORY_SIZE_MB=10
MEDIA_THUMBNAIL_SIZE=100
MEDIA_UPLOAD_URL_EXPIRES_SECONDS=60
MEDIA_ACCESS_URL_EXPIRES_SECONDS=300

STORAGE_BUCKET_NAME=memories-test

CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel