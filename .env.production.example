# Production Environment Configuration for AWS Lightsail
# Copy this to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/<your-project>/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# JWT CONFIGURATION (Required)
# =============================================================================
# Generate a secure random string (minimum 32 bytes) for JWT signing
# Example: openssl rand -hex 32

JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-bytes-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment mode (production, staging, development)
ENVIRONMENT=production

# Debug mode (false for production - disables /docs and /redoc)
DEBUG=false

# =============================================================================
# CORS CONFIGURATION (Required)
# =============================================================================
# Comma-separated list of allowed origins
# Include your Cloudflare Pages domain(s)

CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://your-project.pages.dev

# =============================================================================
# SUPABASE DATABASE CONFIGURATION (Required for LangGraph)
# =============================================================================
# Database URL for LangGraph PostgreSQL connection pooler
# Use Transaction Pooler (Port 6543) for LangGraph
# Format: postgresql://postgres.<project-ref>:<password>@aws-0-us-west-1.pooler.supabase.com:6543/postgres

SUPABASE_DB_URL=postgresql://postgres.your-project-ref:your-password@your-region.pooler.supabase.com:6543/postgres
SUPABASE_DB_PASSWORD=your-database-password

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# API Version (default: v1)
API_VERSION=v1

# Maximum upload file size in MB (default: 10)
MAX_UPLOAD_SIZE_MB=10

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application name for monitoring
# APP_NAME=timeless-love-api

# =============================================================================
# STRIPE CONFIGURATION (Optional - if using payments)
# =============================================================================

# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# SECURITY NOTES
# =============================================================================
#
# 1. Never commit this file to version control
# 2. Keep your JWT_SECRET_KEY secure and unique
# 3. Use strong, unique passwords for Supabase
# 4. Rotate secrets regularly
# 5. Use different values for production vs staging
# 6. Ensure CORS_ORIGINS only includes your actual domains
# 7. Keep DEBUG=false in production
#
# =============================================================================
